@model Event
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h1>Slider info detail</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th> Name </th>
                <th> Location </th>
                <th> Time </th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    @Model.Name
                </td>
                <td style="white-space:normal">
                    @Model.Location
                </td>
                
                <td style="white-space:normal">
                    @Model.Time.ToString("dd MMMM")
                </td>
            </tr>

        </tbody>
    </table>
    <div class="back">
        <a class="btn btn-primary btn-rounded btn-fw my-5" asp-action="Index">
            <i class="mdi mdi-arrow-left-bold"></i>
            Back to main page
        </a>
    </div>
</div>
