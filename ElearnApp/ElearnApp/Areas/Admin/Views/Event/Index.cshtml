@model IEnumerable<Event>
@{
    ViewData["Title"] = "Event";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark">
                    <a class="btn btn-primary my-3" asp-action="Create">Create</a>

                    <thead>
                        <tr>
                            <th> Name </th>
                            <th> Status </th>
                            <th> Operations </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td class="title">
                                    @course.Name
                                </td>
                                <td class="statutes">
                                    @if (course.SoftDelete)
                                    {
                                        <div class="de-active"></div>
                                    }
                                    else
                                    {
                                        <div class="active-status"></div>
                                    }

                                </td>
                                <td>
                                    <a class="btn btn-outline-warning" asp-action="Detail" asp-route-id="@course.Id">Info</a>
                                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                                    <a class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


