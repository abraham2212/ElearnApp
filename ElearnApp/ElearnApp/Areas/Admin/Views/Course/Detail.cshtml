@model Course
@{
    ViewData["Title"] = "Detail";
}


<div class="container mt-5">
    <h1>Detail</h1>
    <div class="img-detail">
        <img class="img-fluid" src="~/images/@Model.CourseImages.FirstOrDefault().Image" />
    </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Title</label>
            <input type="text" class="form-control" style="background-color:black;" id="exampleInputEmail1" disabled asp-for="Name" >
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Description</label>
            <input type="text" class="form-control" style="background-color:black;" id="exampleInputEmail1" disabled asp-for="Description">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Price</label>
            <input type="text" class="form-control" style="background-color:black;"  id="exampleInputEmail1" disabled asp-for="Price">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Sale Count</label>
            <input type="number" class="form-control" style="background-color:black;" id="exampleInputEmail1" disabled asp-for="SaleCount">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Author Fullname</label>
            <input type="text" class="form-control" style="background-color:black;" id="exampleInputEmail1" disabled asp-for="Author.Fullname">
        </div>
    <div class="img-detail" style="width:200px;">
        <img class="img-fluid" src="~/images/@Model.Author.Image"/>
    </div>
        <button class="btn btn-dark" asp-action="Index">Cancel</button>
</div>


