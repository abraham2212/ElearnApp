@model IEnumerable<Course>
@{
    ViewData["Title"] = "Course";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark course-table">
                    <a class="btn btn-primary my-3" asp-action="Create">Create</a>
                    <thead>
                        <tr>
                            <th> Image </th>
                            <th> Name </th>
                            <th> Operations </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td class="img">
                                    <img src="~/images/@course.CourseImages.Where(ci=>ci.IsMain).FirstOrDefault().Image" />
                                </td>
                                <td class="title">
                                    @course.Name
                                </td>
                                <td data-id="@course.Id">
                                    <a class="btn btn-outline-warning" asp-action="Detail" asp-route-id="@course.Id">Info</a>
                                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                                    <a class="btn btn-outline-danger delete-course">Delete</a>
                                </td>
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

