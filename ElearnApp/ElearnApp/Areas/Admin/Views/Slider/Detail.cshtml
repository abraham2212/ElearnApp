@model Slider
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h1>Slider info detail</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th> Image </th>
                <th> Title </th>
                <th> Description </th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    <div class="img-detail">
                        <img class="img-fluid" src="~/images/@Model.BgImage" />
                    </div>

                </td>
                <td>
                    @Model.Title
                </td>
                <td style="white-space:normal">
                   @Model.Description
                </td>
            </tr>

        </tbody>
    </table>
    <div class="back">
        <a class="btn btn-primary btn-rounded btn-fw my-5" asp-action="Index">
            <i class="mdi mdi-arrow-left-bold"></i>
            Back to main page
        </a>
    </div>
</div>
